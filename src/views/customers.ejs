<%- include('partials/_header') %>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover"> 
                <thead>
                    <tr>
                        <th>nÂ°</th>
                        <th>Name</th>
                        <th>Adress</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <tbody>
                            <% for (var i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td><%- i + 1 %></td>
                                    <td><%- data[i].name %></td>
                                    <td><%- data[i].address %></td>
                                    <td><%- data[i].phone %></td>
                                    <td>
                                        <a href="/delete/<%- data[i].id  %>" class="btn btn-danger">Delete</a>
                                        <a href="/update/<%- data[i].id  %>" class="btn btn-info">Update</a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    <% } %>
                    </table>
                    

        </div>
        <div class="col-md-5 card">
            <div class="card-body">
                <form action="/add" method="post">
                    <div class="form-group" >
                        <input type="text" name="name" placeholder="Name" class="form-control mt-5">
                    </div>
                    <div class="form-group">
                        <input type="text" name="address" placeholder="Address" class="form-control mt-5">
                    </div>

                    <div class="form-group">
                        <input type="text" name="phone" placeholder="Phone Number" class="form-control mt-5 mb-5">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Save Customer
                    </button>
                </form>

            </div>

        </div>

    </div>
</div>



<%- include('partials/_footer') %>